<ci:ActionSettingsControlBase x:Class="ClassIsland.Controls.ActionSettingsControls.RunActionSettingsControl"
                              x:TypeArguments="actions:RunActionSettings"
                              d:DataContext="{d:DesignInstance Type=local:RunActionSettingsControl}"
                              xmlns="https://github.com/avaloniaui"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:ci="http://classisland.tech/schemas/xaml/core"
                              xmlns:actions="clr-namespace:ClassIsland.Models.Actions"
                              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:ClassIsland.Controls.ActionSettingsControls"
                              xmlns:controls="clr-namespace:ClassIsland.Controls"
                              xmlns:controls1="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
                              mc:Ignorable="d"
                              d:DesignHeight="450"
                              d:DesignWidth="800">
    <Grid ColumnDefinitions="*,Auto,Auto"
          DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:RunActionSettingsControl}}">
        <TextBox Text="{Binding Settings.Value, Mode=TwoWay}"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Watermark="应用程序、网址 或 cmd 命令"
                 MinWidth="200"/>
        <controls:FileBrowserButton CurrentPath="{Binding Settings.Value, Mode=TwoWay}"
                                    Grid.Column="1" 
                                    Theme="{StaticResource TransparentButton}" Content="{ci:FluentIcon &#xE88D;}"/>
                                <Button Grid.Column="2" 
                                        Theme="{StaticResource TransparentButton}"
                                        Classes="circle">
                                    <controls1:FontIcon Glyph="&#xEBAE;"/>
                                    <Button.Flyout>
                                        <Flyout>
                                            <StackPanel>
                                                <TextBox Grid.Row="1" Grid.ColumnSpan="2"  Text="{Binding Settings.Args, Mode=TwoWay}"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Watermark="(可选) 应用程序启动参数"
                                                         MinWidth="150"/>
                                            </StackPanel>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
    </Grid>
</ci:ActionSettingsControlBase>
