<UserControl x:Class="ClassIsland.Controls.TimeRuleEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ClassIsland.Controls"
             xmlns:ci="http://classisland.tech/schemas/xaml/core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel DataContext="{Binding TimeRule, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:TimeRuleEditControl}}">
        <Separator Margin="0 20 0 8" />
        <ci:IconText Kind="LabelMultipleOutline" Text="触发规则" Margin="0 0 0 8" />
        <!--<TextBlock Text="{Binding}"/>-->
        <TextBlock Text="课表只有在规则全部满足时才会生效。" TextWrapping="Wrap" />

        <TextBlock Text="当今天是：" Margin="0 8 0 0" />
        <ci:NonScrollingListBox x:Name="WeekDayListBox"
            Style="{StaticResource  MaterialDesignFilterChipPrimaryOutlineListBox}"
            SelectionMode="Extended">
            <ListBoxItem Content="周日" Tag="0" />
            <ListBoxItem Content="周一" Tag="1" />
            <ListBoxItem Content="周二" Tag="2" />
            <ListBoxItem Content="周三" Tag="3" />
            <ListBoxItem Content="周四" Tag="4" />
            <ListBoxItem Content="周五" Tag="5" />
            <ListBoxItem Content="周六" Tag="6" />
        </ci:NonScrollingListBox>

        <TextBlock Text="当本周是：" Margin="0 8 0 0" />
        <ci:NonScrollingListBox x:Name="WeekCountDivsListBox"
            Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBox}"
            SelectionMode="Multiple"/>

        <StackPanel>
            <TextBlock Text="每轮周数：" Margin="0 8 0 0" />
            <ci:NonScrollingListBox x:Name="WeekCountDivTotalListBox"
                Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineListBox}"/>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding SettingsService.Settings.MultiWeekRotationMaxCycle, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:TimeRuleEditControl}}" Value="2"/>
                                <Condition Binding="{Binding TimeRule.WeekCountDivTotal, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:TimeRuleEditControl}}" Value="2"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
        </StackPanel>
    </StackPanel>
</UserControl>